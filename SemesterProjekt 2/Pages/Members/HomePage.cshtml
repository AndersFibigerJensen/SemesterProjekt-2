@model SemesterProjekt_2.Pages.Members.HomePageModel
@{
    ViewData["title"] = "HomePage";
}
@*Anders*@

<div>
    <form method="post" class="userpage-form">
        <input asp-for="member.MemberID" type="hidden" />
        <div>
            <img src="~/Images/@Model.member.Image" class="rounded-circle" class="rounded-circle"/>
        </div>
        <div>
        <div class="form-group">
            <label asp-for="@Model.member.Name" class="control-label"></label>
            <input asp-for="@Model.member.Name" class="form-control" readonly/>
        </div>
        <div class="form-group">
            <label asp-for="@Model.member.Address" class="control-label"></label>
            <input asp-for="@Model.member.Address" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="@Model.member.Email" class="control-label"></label>
            <input asp-for="@Model.member.Email" class="form-control" readonly />
        </div>
        <div class="form-group">
            @if (Model.member.IsFamily == true)
            {
                @*<label asp-for="@"*@
                <p class="form-control" readonly> familie</p>
            }
       </div>
       @if (Model.member.HasDoneHygieneCourse == true)
        {
            <div class="form-group">
                
                <p class="form-control" readonly> har bestået hygiene kursus</p>
                

            </div>

        }
        @if (Model.member.IsAdmin == true)
        {
            <div class="form-group">

                <p class="form-control" readonly> har admin priviligeger</p>


            </div>

        }
      <div>
            <a asp-page="UpdateMember" asp-route-id="@Model.member.MemberID" class="btn btn-primary" > opdater Medlem </a>
            <a asp-page="DeleteMember" asp-route-id="@Model.member.MemberID" class="btn btn-primary"> slet din profil</a>
        </div>
        </div>
    </form>
</div>