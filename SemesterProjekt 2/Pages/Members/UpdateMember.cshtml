@page
@model SemesterProjekt_2.Pages.Members.UpdateMemberModel
@{
    ViewData["title"] = "UpdateMember";
}
@*Anders*@

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <input asp-for=@Model.User.MemberID type="hidden" />
            <div class="form-group">
                <label asp-for="@Model.Member.Name" class="control-label"></label>
                <input asp-for="@Model.Member.Name" class="form-control" />
                <span asp-validation-for="@Model.Member.Name" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Address" class="control-label"></label>
                <input asp-for="@Model.Member.Address" class="form-control" />
                <span asp-validation-for="@Model.Member.Address" class=" text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Email" class="control-label"></label>
                <input asp-for="@Model.Member.Email" class="form-control" />
                <span asp-validation-for="@Model.Member.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Password" class="control-label"></label>
                <input asp-for="@Model.Member.Password" class="form-control" />
                <span asp-validation-for="@Model.Member.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.IsFamily" class="control-label"></label>
                <input asp-for="@Model.Member.IsFamily"/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Image" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="@Model.Image" class="custom-file-input form-control" />
                </div>
            </div>
            @if (Model.User.IsAdmin==true)
            {
                <div class="form-group">
                    <label asp-for="@Model.Member.HasDoneHygieneCourse" class="control-label"></label>
                    <input asp-for="@Model.Member.HasDoneHygieneCourse" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Member.IsAdmin" class="control-label"></label>
                    <input asp-for="@Model.Member.IsAdmin" />
                </div>

            }
            <div class="form-group">
                <a asp-page="GetAllMembers" class=" btn-btn-primary">Cancel</a>
                <input type="submit" value=" Opdater Medlem" class="btn-btn-primary" />
            </div>
        </form>
    </div>
</div>
