@page
@model SemesterProjekt_2.Pages.Members.AddMemberModel
@{
    ViewData["title"] = "AddMember";
}
@*Anders*@

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="@Model.Member.Name" class="form-control"></label>
                <input asp-for="@Model.Member.Name" class="form-control" />
                <span asp-validation-for="@Model.Member.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Address" class="form-control"></label>
                <input asp-for="@Model.Member.Address" class="form-control" />
                <span asp-validation-for="@Model.Member.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Email" class="form-control"></label>
                <input asp-for="@Model.Member.Email" class="form-control" />
                <span asp-validation-for="@Model.Member.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Password" class="form-control"></label>
                <input asp-for="@Model.Member.Password" class="form-control" />
                <span asp-validation-for="@Model.Member.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.IsFamily" class="form-control"></label>
                <input asp-for="@Model.Member.IsFamily" class="form-control" />
                <span asp-validation-for="@Model.Member.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Photo" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="@Model.Photo" class="custom-file-input form-control" />
                </div>
                <span asp-validation-for="@Model.Member.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-page="GetAllMembers" class=" btn-btn-primary">Cancel</a>
                <input type="submit" value="tilføj medlem"  class="btn-btn-primary"/>
            </div>

        </form>
    </div>
</div>