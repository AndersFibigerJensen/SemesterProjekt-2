@page
@model SemesterProjekt_2.Pages.Shifts.CreateModel
@{
    ViewData["Title"] = "Create New Shift";
}

<h1>Create New Shift</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Shift.shiftID" class="control-label" ></label>
                <input asp-for="@Model.Shift.shiftID" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Shift.dateFrom" class="control-label" ></label>
                <input asp-for="@Model.Shift.dateFrom" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Shift.dateTo" class="control-label" ></label>
                <input asp-for="@Model.Shift.dateTo" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
