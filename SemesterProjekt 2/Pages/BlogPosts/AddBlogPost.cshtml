@page
@model SemesterProjekt_2.Pages.BlogPosts.AddBlogPostModel
@{
    ViewData["title"] = "AddBlogPost";
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Post.BlogPost" class="control-label"></label>
                <input asp-for="@Model.Post.BlogPost" class=" form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Image" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="@Model.Image" class="custom-file-input form-control" />
                </div>
                <span asp-validation-for="@Model.Post.Image" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="@Model.User.MemberID" class="control-label"></label>
                <input asp-for="@Model.User.MemberID" class="form-control" readonly />
            </div>
            <div class="form-group">
                <a asp-page="GetAllBlog" class="btn-primary">cancel</a>
                <input type="submit" value="Add BlogPost" class="btn-primary" />
            </div>
        </form>
    </div>
</div>