@page
@model SemesterProjekt_2.Pages.Events.AddEventModel
@{
    ViewData["Title"] = "AddEvent";
}
<h1>Tilføj event</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Event.name"></label>
                <input asp-for="@Model.Event.name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.eventStart"></label>
                <input asp-for="@Model.Event.eventStart" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.eventEnd"></label>
                <input asp-for="@Model.Event.eventEnd" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.price"></label>
                <input asp-for="@Model.Event.price" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.isMemberRequired"></label>
                <input asp-for="@Model.Event.isMemberRequired" />
            </div>
            <div class="form-group">
                <a asp-page="GetAllEvents" class=" btn-btn-primary">Cancel</a>
                <input type="submit" value=" Add Event" class="btn-btn-primary" />
            </div>
        </form>
    </div>
</div>