@model SemesterProjekt_2.Pages.Events.ShowMembersModel
@using SemesterProjekt_2.Interfaces;
@inject IMemberService Members;
@{
}
@*<form method="get">
    Search <input type="text" asp-for="FilterCriteria" />
    <input type="submit" value="Filter" />
