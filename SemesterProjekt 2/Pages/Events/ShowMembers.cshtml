<p>
    <a asp-page="GetAllEvents">Back to events</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                MedlemsID
            </th>
            <th>
                Navn
            </th>
            <th>
                Addresse
            </th>
            <th>
                Email
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Members )
        {
            <tr>
                    <td>
                        <img src="~/Images/@Members.GetMemberByIdAsync(item).Result.Image" class="rounded-circle" width="80" height="70" />
                    </td>
                    <td>
                        @Members.GetMemberByIdAsync(item).Result.Name
                    </td>
                    <td>
                        @Members.GetMemberByIdAsync(item).Result.Address
                    </td>
                    <td>
                        @Members.GetMemberByIdAsync(item).Result.Email
                    </td>
            </tr>
            @if (Model.Member.IsAdmin == true)
            {
            <td>
                <a asp-page="/Events/LeaveEvent" asp-route-memberID="@item.@Members.GetMemberByIdAsync(item).Result.MemberID" asp-route-eventID="@Model.Event.eventID">Remove</a>
            </td>
            }


        }
    </tbody>
</table>
